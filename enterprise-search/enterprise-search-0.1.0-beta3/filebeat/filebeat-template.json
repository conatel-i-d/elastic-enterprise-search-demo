{
  "index_patterns": [".ent-search-app-logs-*", ".ent-search-analytics-logs-*"],
  "settings": {
    "index": {
      "refresh_interval": "1s",
      "number_of_shards": 1,
      "number_of_replicas": 0,
      "auto_expand_replicas": "0-1",
      "mapping.total_fields.limit": 5000
    }
  },
  "mappings": {
    "dynamic_templates": [
      {
        "message_field": {
          "path_match": "message",
          "match_mapping_type": "string",
          "mapping": {
            "type": "text",
            "norms": false
          }
        }
      },
      {
        "body_not_indexed" : {
          "path_match" : "@fields.*body",
          "match_mapping_type": "string",
          "mapping": {
            "type": "text",
            "index": false,
            "norms": false,
            "ignore_above": 8192
          }
        }
      },
      {
        "error_not_indexed" : {
          "match" : "@fields.error",
          "match_mapping_type": "string",
          "mapping": {
            "type": "text",
            "index": false,
            "norms": false,
            "ignore_above": 8192
          }
        }
      },
      {
        "string_fields": {
          "match": "*",
          "match_mapping_type": "string",
          "mapping": {
            "type": "text",
            "norms": false,
            "fields": {
              "keyword": {
                "type": "keyword",
                "ignore_above": 256
              }
            }
          }
        }
      }
    ],
    "properties": {
      "@fields": {
        "type": "object",
        "dynamic": true
      },
      "fields": {
        "type": "object",
        "dynamic": true
      },
      "@fields.timestamp": {
        "type": "date"
      },
      "@source": {
        "type": "keyword"
      },
      "@timestamp": {
        "type": "date"
      },
      "@version": {
        "type": "keyword"
      },
      "geoip": {
        "dynamic": true,
        "properties": {
          "ip": {
            "type": "ip"
          },
          "location": {
            "type": "geo_point"
          },
          "latitude": {
            "type": "half_float"
          },
          "longitude": {
            "type": "half_float"
          }
        }
      }
    }
  }
}
