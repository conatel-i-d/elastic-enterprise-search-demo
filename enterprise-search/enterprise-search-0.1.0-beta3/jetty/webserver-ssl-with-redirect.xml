<?xml version="1.0"?>
<!DOCTYPE Configure PUBLIC "-//Jetty//Configure//EN" "http://www.eclipse.org/jetty/configure.dtd">

<Configure id="Server" class="org.eclipse.jetty.server.Server">

  <New id="sslContextFactory" class="org.eclipse.jetty.util.ssl.SslContextFactory">
    <Arg><SystemProperty name="jetty.keystore_path" /></Arg>
    <Set name="KeyStorePassword"><SystemProperty name="jetty.keystore_password" /></Set>
    <Set name="KeyManagerPassword"><SystemProperty name="jetty.keymanager_password" /></Set>
  </New>

  <New id="httpConfig" class="org.eclipse.jetty.server.HttpConfiguration">
    <Set name="secureScheme">https</Set>
    <Set name="securePort"><SystemProperty name="warbler.port" /></Set>
  </New>

  <New id="httpsConfig" class="org.eclipse.jetty.server.HttpConfiguration">
    <Arg><Ref refid="httpConfig" /></Arg>
    <Set name="customizers">
      <Array type="org.eclipse.jetty.server.SecureRequestCustomizer">
        <Item>
          <New class="org.eclipse.jetty.server.SecureRequestCustomizer" />
        </Item>
      </Array>
    </Set>
  </New>

  <New id="httpConnector" class="org.eclipse.jetty.server.ServerConnector">
    <Arg><Ref refid="Server" /></Arg>
    <Arg>
      <Array type="org.eclipse.jetty.server.ConnectionFactory">
        <Item>
          <New class="org.eclipse.jetty.server.HttpConnectionFactory">
            <Arg><Ref refid="httpConfig" /></Arg>
          </New>
        </Item>
      </Array>
    </Arg>
    <Set name="host"><SystemProperty name="warbler.host" /></Set>
    <Set name="port"><SystemProperty name="jetty.redirect_http_from_port" /></Set>
  </New>

  <New id="httpsConnector" class="org.eclipse.jetty.server.ServerConnector">
    <Arg><Ref refid="Server" /></Arg>
    <Arg><Ref refid="sslContextFactory" /></Arg>
    <Arg>
      <Array type="org.eclipse.jetty.server.ConnectionFactory">
        <Item>
          <New class="org.eclipse.jetty.server.HttpConnectionFactory">
            <Arg><Ref refid="httpsConfig" /></Arg>
          </New>
        </Item>
      </Array>
    </Arg>
    <Set name="host"><SystemProperty name="warbler.host" /></Set>
    <Set name="port"><SystemProperty name="warbler.port" /></Set>
  </New>

  <Set name="handler">
    <New class="org.eclipse.jetty.server.handler.StatisticsHandler">
      <Set name="handler">
        <New class="org.eclipse.jetty.server.handler.HandlerCollection">
          <Set name="handlers">
            <Array type="org.eclipse.jetty.server.Handler">
              <Item>
                <New class="org.eclipse.jetty.server.handler.SecuredRedirectHandler" />
              </Item>
              <!--
                Add ContextHandlerCollection manually to prevent jetty-runner from prepending it to the handler collection:
                https://github.com/eclipse/jetty.project/blob/cdd553332c1e9f4d63ec2d0242761f61a4ea8007/jetty-runner/src/main/java/org/eclipse/jetty/runner/Runner.java#L345
              -->
              <Item>
                <New class="org.eclipse.jetty.server.handler.ContextHandlerCollection" />
              </Item>
            </Array>
          </Set>
        </New>
      </Set>
    </New>
  </Set>

  <Set name="connectors">
    <Array type="org.eclipse.jetty.server.Connector">
      <Item><Ref refid="httpConnector" /></Item>
      <Item><Ref refid="httpsConnector" /></Item>
    </Array>
  </Set>

  <Set name="stopAtShutdown">true</Set>
  <Set name="stopTimeout">20000</Set>
</Configure>
